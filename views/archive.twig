{% extends "base.twig" %} {% block content %}

<div class="container pt sb">
    {% for post in posts %}
        <div class="row py-6">
            <div class="col-lg-6">
                <a href="{{ post.link }}"></a>
                    <h3 class="pb-5">
                        {{ post.title }}
                    </h3>
                </a>
                <p>{{ post.excerpt }}</p>
            </div>

            <div class="col-lg-4 offset-lg-2 pt-5">
                {% if post.thumbnail %}
                <img src="{{ post.thumbnail.src }}" />
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}