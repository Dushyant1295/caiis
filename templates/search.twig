{% extends "base.twig" %} {% block content %}
<section>
	<div class="bg-blue pt pb-10">
		<h5 class="text-center">
			{% if posts|length > 0 %} {% if title %}
			{{ title }}
			{% endif %} {% else %} No result found {% endif %}
		</h5>
	</div>
	<div class="container py-10">	
		<div class="row justify-content-center">
			<div class="col-md-9">
				{% for post in posts %}
				<div class="pb-8">
					<a href="{{ post.link }}">
						<h3>{{ post.title }}</h3>
					</a>
 					<a href="{{ post.link }}" class="btn-1 mt-5" title="{{ post.title }}">
						Read More
					</a>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
{% endblock %}